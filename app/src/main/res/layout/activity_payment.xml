<!--              tools:context=".PaymentActivity">-->

        <TextView
                android:id="@+id/statusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="65sp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentBottom="false" android:layout_alignParentRight="false"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"/>
        <Button android:id="@+id/homeButton"
                style="?metaButtonBarButtonStyle"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:textColor="@color/black_overlay"
                android:background="@drawable/sendpaymentbutton"
                android:layout_weight="1"
                android:layout_marginBottom="45dp"
                android:layout_marginRight="60dp"
                android:text="@string/main_menu"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="true"/>
        <pl.droidsonroids.gif.GifImageView
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:layout_marginRight="300dp"
                android:layout_marginLeft="300dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_width="448dp"
                android:layout_height="367dp" android:src="@drawable/hammatimetwo" android:id="@+id/waitingView"/>
        <pl.droidsonroids.gif.GifImageView
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                android:layout_marginRight="300dp"
                android:layout_marginLeft="300dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_width="448dp"
                android:layout_height="367dp" android:src="@drawable/daffymoney" android:id="@+id/completedView"/>

</RelativeLayout>
